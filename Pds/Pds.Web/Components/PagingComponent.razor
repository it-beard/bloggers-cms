@inherits PagingComponentBase

<nav class="col">
    <ul class="pagination">
        @foreach (var page in pages)
        {
            <li class="page-item">
                <button class="btn mr-1
                    @(page.Active ? "btn-info" : "btn-outline-info")
                    @(page.Enabled ? null : "disabled")"
                        @onclick="@(() => OnChangePage(page))">
                    @(page.Text)
                </button>
            </li>
        }
        <li>
            <select class="form-control bg-info text-light page-size-selector" @onchange="@OnChangePageSize" >
                @foreach (var pageSize in PageSizeList)
                {
                    <option class="bg-light text-info" value="@pageSize">@pageSize</option>
                }
            </select>
        </li>
    </ul>
</nav>
